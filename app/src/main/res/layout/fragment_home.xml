<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/bordered_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="30dp"
        app:cardBackgroundColor="#E1F5FE"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/tvVocableLearn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:gravity="center"
                android:text="Vokabeln lernen"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btVerb"
                style="@style/bordered_button"
                android:layout_width="180dp"
                android:layout_height="83sp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:background="#00FFFFFF"
                android:text="Verben"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvVocableLearn" />

            <Button
                android:id="@+id/btAdjektive"
                style="@style/bordered_button"
                android:layout_width="180dp"
                android:layout_height="83dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:background="#00FFFFFF"
                android:text="Adjektive"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btNomen" />

            <Button
                android:id="@+id/btPräpositionen"
                style="@style/bordered_button"
                android:layout_width="180dp"
                android:layout_height="83dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:background="#00FFFFFF"
                android:text="Präpositionen"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btAdjektive" />

            <Button
                android:id="@+id/btNomen"
                style="@style/bordered_button"
                android:layout_width="180dp"
                android:layout_height="83dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:background="#00FFFFFF"
                android:text="Nomen,  Artikeln"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvVocableLearn" />

            <Button
                android:id="@+id/btPronomen"
                style="@style/bordered_button"
                android:layout_width="180dp"
                android:layout_height="83dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:background="#00FFFFFF"
                android:text="Pronomen"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btVerb" />

            <Button
                android:id="@+id/btKonjuktion"
                style="@style/bordered_button"
                android:layout_width="180dp"
                android:layout_height="83dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:background="#00FFFFFF"
                android:text="Konjuktion"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btPronomen" />

            <Button
                android:id="@+id/btQuiz"
                style="@style/green_bordered_button"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:text="Teste dein Deutsch im  Quiz!"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btPräpositionen" />

            <Button
                android:id="@+id/btMyVocableBox"
                style="@style/green_bordered_button"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:text="Meine Vokabel Box"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btQuiz" />

            <Button
                android:id="@+id/btMyQuestions"
                style="@style/green_bordered_button"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:text="Gespeicherte Fragen im  Quiz!"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btMyVocableBox" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C5CAE9"
        tools:context=".ui.main.MainFragment">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvVocable"
            android:layout_width="408dp"
            android:layout_height="652dp"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/btDie"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:listitem="@layout/list_item_vocable" />

        <Button
            android:id="@+id/btDer"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#000000"
            android:text="Der"
            app:layout_constraintTop_toBottomOf="@+id/rvVocable"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btDie"
            app:layout_constraintStart_toStartOf="parent"></Button>

        <Button
            android:id="@+id/btDie"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:backgroundTint="#F43535"
            android:text="Die"
            app:layout_constraintBottom_toBottomOf="@+id/btDer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btDer"
            app:layout_constraintVertical_bias="0.0"></Button>

        <Button
            android:id="@+id/btDas"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:backgroundTint="#E8E04F"
            android:text="Das"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/btDie"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btDie"
            app:layout_constraintTop_toTopOf="@+id/btDie"
            app:layout_constraintVertical_bias="0.0"></Button>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>

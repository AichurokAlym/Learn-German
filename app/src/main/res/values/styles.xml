        <item name="android:background">#00FFFFFF</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="red_bordered_button" parent="Theme.AppCompat">
        <item name="android:foreground">@drawable/answer_cards_wrong</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bordered_button" parent="Theme.AppCompat">
        <item name="android:foreground">@drawable/answer_cards_style</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
